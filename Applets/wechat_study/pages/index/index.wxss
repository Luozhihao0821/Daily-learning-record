/* pages/index/index.wxss */
.indexContainer{
  /* 使用弹性布局 */
  display: flex;
  /* 控制弹性布局方向--调为竖直方向 */
  flex-direction: column;
  /* 水平居中 */
  align-items: center;
  /* 控制主轴-现在为y轴  justify-content: center; */
  background: #90b1ff;
  height: 100%;
}
.avatarUrl{
  /* rpx 适配屏幕大小变化 */
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  margin: 100rpx;
}
.userName{
  font-size: 32rpx;
  margin-top: 100rpx;
  color: rgb(255, 255, 255);
}
.goStudy{
  width: 300rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 28rpx;
  border: 1rpx solid rgb(255, 255,255);
  border-radius: 10rpx;
  margin-top: 100rpx;
  color: rgb(255, 255, 255);
}
