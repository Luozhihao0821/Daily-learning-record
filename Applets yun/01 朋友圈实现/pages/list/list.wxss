/* pages/list/list.wxss */
page{
  background: #fff;
}
/* 整个页面宽度750rpx
*左边距20rpx
*右边距20rpx
*头像设置80rpx
*头像右侧部分10rpx */
.go-publish{
  width: 60rpx;
  height: 60rpx;
}
.item{
  display: flex;
  width: 100%;
  padding: 20rpx 20rpx;
  border-bottom: 1rpx solid #696969;
}
.left{
  width: 80rpx;
  margin-right: 10rpx;
}
.avatar{
  width: 80rpx;
  height: 80rpx;
  margin-right: 10rpx;
  background: #f3f3f3;
}
.right{
  width: 620rpx;
  display: flex;
  flex-direction: column;
}
.nickname{
  font-size: 32rpx;
  line-height: 50rpx;
  color: #3b4977;
}
.content{
  font-size: 32rpx;
  line-height: 40rpx;
  color: #181818;
  margin-bottom: 10rpx;
}
.image-list{
  display: flex;
  flex-wrap: wrap;
}
.image-list .image{
  width: 160rpx;
  height: 160rpx;
  background: #f3f3f3;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
}
.time-area{
  display: flex;
  height: 70rpx;
  position: relative;
  align-items: center;
}
.time-area .item{
  font-size: 26rpx;
  line-height: 70rpx;
  color: #696969;
}
.time-area .operation-button{
  height: 40rpx;
  width: 70rpx;
  position: absolute;
  right: 0rpx;
  top: 15rpx;
  background: #bbbbbb;
}
.time-area .operation-pannel{
  position: absolute;
  top: 0rpx;
  right: 80rpx;
  width: 300rpx;
  line-height: 70rpx;
  background: #4c5154;
  border-radius: 10rpx;
  font-size: 24rpx;
  color: white;
  text-align: center;
}
.time-area .operation-pannel .tab{
  display: inline-block;
  width: 150rpx;
}
.time-area .operation-pannel .tab image{
  width: 26rpx;
  height: 26rpx;
  vertical-align: middle;
  background: transparent;
}
.love-comment{
  margin-top: 10rpx;
  background: #f7f7f7;
  width: 100%;
}
.love{
  padding: 6rpx 16rpx;
  border-bottom: 1rpx solid #f0f0f0;
}
.love .love-icon{
  width: 26rpx;
  height: 26rpx;
}
.love .love-nickname{
  font-size: 30rpx;
  line-height: 40rpx;
  color: #3b4977;
}
.comment{
  padding: 6rpx 16rpx;
  padding-bottom: 12rpx;
  font-size: 30rpx;
}
.comment .comment-nickname{
  color: #252525;
  line-height: 40rpx;
}
.comment .comment-conetent{
  color: #181818;
  line-height: 40rpx;
}
/* 评论添加 */
.comment-add{
  position: fixed;
  bottom: 0rpx;
  width: 100%;
  height: 100rpx;
  align-items: center;
  display: flex;
  background: rgb(175, 175, 175);
}
.comment-add .comment-input{
  height: 52rpx;
  line-height: 52rpx;
  vertical-align: middle;
  color: #141414;
  margin-left: 20rpx;
  margin-right:20rpx;
  padding: 5rpx 20rpx;
  background: white;
  flex-grow: 1;
}
.comment-add .commend-send{
  margin-right:20rpx;
  font-size: 22rpx;
}